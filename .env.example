# Homelab Environment Configuration
# Copy this file to each service directory as .env and fill in your values

# ==============================================
# TRAEFIK CONFIGURATION
# ==============================================

# Traefik Dashboard Authentication
# Generate with: echo $(htpasswd -nb admin password) | sed -e s/\\$/\\$\\$/g
TRAEFIK_DASHBOARD_USER=admin
TRAEFIK_DASHBOARD_PASSWORD_HASH=

# Cloudflare API Token for DNS Challenge
# Create at: https://dash.cloudflare.com/profile/api-tokens
# Permissions needed: Zone:DNS:Edit, Zone:Zone:Read
CLOUDFLARE_API_TOKEN=your_cloudflare_api_token_here
CLOUDFLARE_EMAIL=your_email@example.com

# Domain Configuration
DOMAIN=plexlab.site

# ==============================================
# PIHOLE CONFIGURATION
# ==============================================

# Pi-hole Web Interface Password
PIHOLE_PASSWORD=your_secure_password_here

# Upstream DNS Configuration
PIHOLE_DNS1=172.70.9.2#5053
PIHOLE_DNS2=9.9.9.9

# Pi-hole Domain
PIHOLE_DOMAIN=nexuswarrior.site

# ==============================================
# HOMEPAGE CONFIGURATION
# ==============================================

# Homepage Domain
HOMEPAGE_DOMAIN=list.plexlab.site

# Docker Socket Proxy Configuration (for security)
DOCKER_SOCKET_PROXY_PORT=2375

# ==============================================
# RUSTDESK CONFIGURATION
# ==============================================

# RustDesk Server Key (leave empty for auto-generation)
RUSTDESK_KEY=

# RustDesk Relay Server
RUSTDESK_RELAY=your_server_ip

# ==============================================
# CODE-SERVER CONFIGURATION
# ==============================================

# Base domain for code-server instances
CODE_SERVER_DOMAIN=tinkeringturtle.site

# Code-server password (shared across instances)
CODE_SERVER_PASSWORD=your_code_server_password

# Base directory for user workspaces
CODE_SERVER_BASE_DIR=/home/docker/code-server

# ==============================================
# NETWORK CONFIGURATION
# ==============================================

# Docker network name (external network for Traefik)
DOCKER_NETWORK=proxy

# Pi-hole internal network subnet
PIHOLE_NETWORK_SUBNET=172.70.9.0/29

# ==============================================
# DEPLOYMENT CONFIGURATION
# ==============================================

# Backup retention (number of backups to keep)
BACKUP_RETENTION=5

# Deployment notifications (optional)
SLACK_WEBHOOK_URL=
DISCORD_WEBHOOK_URL=

# ==============================================
# TRUENAS CONFIGURATION (if using NFS mounts)
# ==============================================

# TrueNAS Server IP
TRUENAS_IP=192.168.1.x

# NFS Mount options
NFS_MOUNT_OPTIONS=vers=4,soft,timeo=600,retrans=2,rsize=131072,wsize=131072
